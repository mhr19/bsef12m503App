</head>
<body >
    

    <div id="subheader">
        <div class="row">
            <div class="twelve columns">
                <p class="centered">
                    SIGN UP
                </p>

            </div>
        </div>
    </div>
    <div class="hr">
    </div>
    <div class="row">
        <div class=" six columns">


            <form method="post" class="form-horizontal" action="~/Home/Register" id="contactform">

                <div class="form-group ">

                    UserName:<input type="text" name="Name" class="smoothborder" placeholder="UserName *" required />
                </div>

                <div class="form-group">

                    Password:<input type="password" name="Password" class="smoothborder" placeholder="Password *" required />
                </div>
                <div id="checking">Checking...</div>
                <div class="form-group">

                    Email:<input type="email"  id="email" name="Email" class="smoothborder" placeholder="Email *" required />
                

                
                

                    @*<input type="button" id="b1" value="Check" />*@
                    <div id="result"></div>
                    @Scripts.Render("~/bundles/jquery")
                    <script>
                        
                        $(document).ready(function () {

                            $('#checking').hide();

                            $('#email').change(function () {

                                var userName = $('#email').val();

                                //alert('User Name ='+ userName);
                                $('#checking').show();
                                $.getJSON("/Home/CheckUserEmail?Email=" + userName, function (data) {
                                    $('#checking').hide();
                                    if (data) {
                                        $('#result').text("User already exists in database");
                                        $('#email').val(null)

                                    }
                                    else {
                                        $('#result').text("User Name is available");
                                    }
                                });

                            });

                        });
                    </script>
                </div>
                <div class="form-group">

                    Contact:<input type="tel" name="Contact" class="smoothborder" placeholder="Contact Number *" required />
                </div>

                <div class="form-group">

                    Type:<input type="text" name="Type" class="smoothborder" value="User" readonly />
                </div>
                <div class="form-group">
                    <input type="submit" name="Submit" id="Submit" />
                </div>



            </form>
        </div>
    </div>



   
