<head>
    <meta charset="utf-8" />
    <!-- Set the viewport width to device width for mobile -->
    <meta name="viewport" content="width=device-width" />
    <title>PARAMOUNT Surgical Trading Co.</title>
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/responsive.css" rel="stylesheet" />
    <link href="~/Content/skins/blue.css" rel="stylesheet" />
    <!-- IE Fix for HTML5 Tags -->
    <!--[if lt IE 9]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
      <![endif]-->

    <script type="text/javascript" src="~/Scripts/countries.js"></script>

</head>
<body>


    <div class="row">
        <div class="twelve columns" style="background-color:black">
            <ul class="ca-menu">
                <li>
                    <a href="@Url.Action("Surgical", "Home", new { Type="Surgical"})">

                        <div class="ca-content">
                            <h2 class="ca-main" style="color:white">Surgical<br />Instruments</h2>

                        </div>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Surgical", "Home", new { Type="Dental"})">

                        <div class="ca-content">
                            <h2 class="ca-main" style="color:white">Dental<br />Instruments</h2>

                        </div>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Surgical", "Home", new { Type="Beauty"})">

                        <div class="ca-content">
                            <h2 class="ca-main" style="color:white">Beauty<br />Instruments</h2>

                        </div>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Surgical", "Home", new { Type="Veterinary"})">

                        <div class="ca-content">
                            <h2 class="ca-main" style="color:white">Veterinary<br />Instruments</h2>

                        </div>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <!-- SUBHEADER
    ================================================== -->
    <div id="subheader">
        <div class="row">
            <div class="twelve columns">
                <p class="left">
                    Update Profile
                </p>

            </div>
        </div>
    </div>
    <div class="hr">
    </div>

    <div class="row">
        <div class="six columns">
            <div class="box-inner">
                

                <div class="box-content">

                    @using (Html.BeginForm("UpdateProfile", "Home", FormMethod.Post))
                    {

                        @Html.HiddenFor(x => x.Id)
                        @Html.LabelFor(x => x.Name)
                        @Html.EditorFor(x => x.Name)
                        @Html.Label("Password")
                        @Html.EditorFor(x => x.Password)
                        @Html.Label("Contact")
                        @Html.EditorFor(x => x.Contact)
                        @Html.Label("Email")
                        <input type="email" name="Email" value="@Model.Email" readonly />
                        
                        @Html.HiddenFor(x => x.Type)
                        
                        <button type="submit" class="btn btn-default">Update Info</button>
                    }

                </div>
            </div>
        </div>
        <!--/span-->
    </div>

    
