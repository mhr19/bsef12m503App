@model MvcApplication1.Models.Order
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
